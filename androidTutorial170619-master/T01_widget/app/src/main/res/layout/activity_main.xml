<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a.t01_widget.MainActivity">

    <TextView
        android:id="@+id/textViewID"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:textSize="30dp"
        android:text="ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_alignBaseline="@id/textViewID"
        android:layout_toRightOf="@id/textViewID"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewPW"
        android:layout_alignRight="@id/textViewID"
        android:layout_below="@id/textViewID"
        android:text="PW:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_alignBaseline="@id/textViewPW"
        android:layout_toRightOf="@id/textViewPW"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <Button
        android:typeface="monospace"
        android:textColor="#072e2b"
        android:layout_centerInParent="true"
        android:text="Login!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
